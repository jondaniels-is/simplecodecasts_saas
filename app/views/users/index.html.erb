
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="title">
            <h1>Dev Match Communtiy</h1>
            <p>Welcome to the Dev Match Communtiy. Users must fill out a profile to be visible in the community.</p>
        </div>
        <ul class="list-unstyled">
            <% @users.each do |user| %>
                <% if user.profile %>    
                    <li>
                        <div class="well row <%= cycle('white-bg', '') %>">
                           <%= link_to user do %>
                               <div class="col-sm-3 text-center">
                                    <% if user.profile.avatar %>
                                        <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar'%>
                                    <% end %>
                            <% end %>    
                                </div>
                                <div>
                                    <%= link_to user do %>    
                                        <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                                    <% end %>    
                                    <p><%= user.profile.job_title %> 
                                        <% if user.plan_id == 2 %>
                                            <span class="label label-danger">PRO</span>
                                        <% end %>    
                                    </p>
                                </div>
                            
                        </div>
                    </li>    
                <% end %>
           <% end %>
        </ul>
    </div>
</div>